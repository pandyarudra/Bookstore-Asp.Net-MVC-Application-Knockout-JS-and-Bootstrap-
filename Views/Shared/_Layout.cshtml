
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | The Good Book Store</title>
    <link rel="shortcut icon" href="../../Content/images/logo.ico" type="image/x-icon">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">


</head>
<body>
    <div class="loader"></div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        @Html.ActionLink("Bookstore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item p-auto">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item p-auto">

                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item p-auto">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item p-auto">
                    @Html.ActionLink("Authors", "Index", "Authors", null, new { @class = "nav-link" })
                </li>
            </ul>

        </div>
    </nav>

    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer class="fixed-bottom">
            <div class=" row bg-dark text-light text-center">
                <div class="col-4 col-sm-12">
                    Contact Us
                </div>
                <div class="col-md-2 col-sm-12">
                    Policies
                </div>
                <div class="col-md-3 col-sm-12">
                    Sitemap
                </div>
                <div class="col-md-3 col-sm-12">
                    <i class="fab fa-facebook"></i>

                    <i class="fab fa-google-plus-square"></i>

                    <i class="fab fa-twitter"></i>



                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/knockout-3.4.2.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        /*window.onload = function () {
            document.getElementsByClassName("loader").style.display = "none";
        }*/

        $(window).on('load', function () {
            $(".loader").fadeOut("slow");
        });
    </script>
</body>

</html>
